{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://acha.dev/schemas/v1/receipt.schema.json",
  "title": "Receipt",
  "description": "Post-apply evidence record for a single edit plan execution",
  "type": "object",
  "properties": {
    "plan_id": {
      "type": "string",
      "description": "Reference to the EditPlan that was applied",
      "minLength": 1
    },
    "file": {
      "type": "string",
      "description": "File that was modified",
      "minLength": 1
    },
    "before_hash": {
      "type": "string",
      "description": "SHA256 hash of file content before edits",
      "pattern": "^[a-f0-9]{64}$"
    },
    "after_hash": {
      "type": "string",
      "description": "SHA256 hash of file content after edits",
      "pattern": "^[a-f0-9]{64}$"
    },
    "parse_valid": {
      "type": "boolean",
      "description": "Whether the file parses successfully after edits"
    },
    "invariants_met": {
      "type": "boolean",
      "description": "Whether all plan invariants were satisfied"
    },
    "estimated_risk": {
      "type": "number",
      "description": "Risk estimate from the plan",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "duration_ms": {
      "type": "integer",
      "description": "Time taken to apply edits (milliseconds)",
      "minimum": 0
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp when receipt was created",
      "format": "date-time"
    }
  },
  "required": [
    "plan_id",
    "file",
    "before_hash",
    "after_hash",
    "parse_valid",
    "invariants_met",
    "estimated_risk",
    "duration_ms",
    "timestamp"
  ],
  "additionalProperties": false
}
