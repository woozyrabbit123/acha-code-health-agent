{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patch Summary",
  "type": "object",
  "properties": {
    "patch_id": {
      "type": "string",
      "description": "Unique identifier for the patch (UUID)"
    },
    "files_touched": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of files modified by this patch"
    },
    "lines_added": {
      "type": "integer",
      "description": "Number of lines added"
    },
    "lines_removed": {
      "type": "integer",
      "description": "Number of lines removed"
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Additional notes about the patch"
    }
  },
  "required": ["patch_id", "files_touched", "lines_added", "lines_removed", "notes"]
}
