{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ACHA Policy Configuration",
  "type": "object",
  "properties": {
    "fail_on_error": { "type": "boolean", "default": true },
    "fail_on_risky": { "type": "boolean", "default": true },
    "max_warnings": { "type": ["integer", "null"], "minimum": 0 },
    "max_errors": { "type": "integer", "default": 0, "minimum": 0 },
    "max_complexity": { "type": "integer", "default": 15, "minimum": 1 },
    "max_function_length": { "type": "integer", "default": 50, "minimum": 10 },
    "suppression_enabled": { "type": "boolean", "default": true }
  },
  "additionalProperties": false
}
