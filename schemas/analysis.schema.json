{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Analysis Result",
  "type": "object",
  "properties": {
    "file_path": {
      "type": "string",
      "description": "Path to the analyzed file"
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "message": {
            "type": "string"
          },
          "line": {
            "type": "integer"
          }
        },
        "required": ["severity", "message"]
      }
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    }
  },
  "required": ["file_path", "issues"]
}
