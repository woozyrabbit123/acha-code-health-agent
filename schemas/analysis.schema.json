{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Analysis Report",
  "type": "object",
  "properties": {
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the finding (e.g., ANL-001)"
          },
          "file": {
            "type": "string",
            "description": "Relative path to the file containing the finding"
          },
          "start_line": {
            "type": "integer",
            "description": "Starting line number of the finding"
          },
          "end_line": {
            "type": "integer",
            "description": "Ending line number of the finding"
          },
          "finding": {
            "type": "string",
            "enum": ["dup_immutable_const", "long_function", "style_violation", "risky_construct"],
            "description": "Type of finding detected"
          },
          "severity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Severity score from 0 (lowest) to 1 (highest)"
          },
          "fix_type": {
            "type": "string",
            "description": "Suggested fix type"
          },
          "rationale": {
            "type": "string",
            "description": "Explanation of why this is flagged"
          },
          "test_hints": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Hints for testing the fix"
          }
        },
        "required": ["id", "file", "start_line", "end_line", "finding", "severity", "fix_type", "rationale", "test_hints"]
      }
    }
  },
  "required": ["findings"]
}
