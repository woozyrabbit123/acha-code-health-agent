{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Validation Result",
  "type": "object",
  "properties": {
    "patch_id": {
      "type": "string",
      "description": "Unique identifier for the validated patch"
    },
    "status": {
      "type": "string",
      "enum": ["pass", "fail", "error"],
      "description": "Overall validation status"
    },
    "duration_s": {
      "type": "number",
      "description": "Validation duration in seconds"
    },
    "tests_run": {
      "type": "integer",
      "description": "Number of tests executed"
    },
    "failing_tests": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of failing test names"
    }
  },
  "required": ["patch_id", "status", "duration_s", "tests_run", "failing_tests"]
}
